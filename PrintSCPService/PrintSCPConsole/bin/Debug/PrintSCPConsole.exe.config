<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
  <connectionStrings>
    <add name="PrintSystem_Connection"
        connectionString="Data Source=localhost;Initial Catalog=PrintSystem;Integrated Security=True"
        providerName="System.Data.SqlClient" />
  </connectionStrings>
  <log4net>
    <logger name="Dicom.Network">
      <level value="DEBUG" />
      <appender-ref ref="RollingFileAppender" />
    </logger>
    <logger name="Dicom.Printing">
      <level value="DEBUG"  />
      <appender-ref ref="RollingFileAppender" />
    </logger>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--日志文件名-->
      <file value="D:\Log\PrintSCPService.log"/>
      <!--多线程时采用最小锁定-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--日期的格式，每天换一个文件记录-->
      <datePattern value="(yyyyMMdd)"/>
      <!--是否追加到文件-->
      <appendToFile value="true"/>
      <RollingStyle value="Size"/>
      <!--每天记录的日志文件个数-->
      <MaxSizeRollBackups value="10"/>
      <!--每个日志文件的最大大小-->
      <maximumFileSize value="2MB"/>
      <!--日志格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%t]%-5p %c - %m%n"/>
      </layout>
    </appender>
  </log4net>
</configuration>


